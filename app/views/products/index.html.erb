

<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><span class="glyphicon glyphicon-zoom-in"> </span><button type="button" class="btn btn-outline-primary"><%= link_to 'Show', product %></button></td>
        <td><span class="glyphicon glyphicon-edit"></span><button type="button" class="btn btn-outline-primary"><%= link_to 'Edit', edit_product_path(product) %></button></td>
        <td><span class="glyphicon glyphicon-remove"></span><button type="button" class="btn btn-outline-primary"><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

